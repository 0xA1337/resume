{{#if resume.work.length}}
<section>
	<h2>Work Experience</h2>
	{{#each resume.work}}
		<div>
			<span class="headline">
				{{#if website}}
					<a target="_blank" rel="noopener" href="{{website}}">{{company}}</a>
				{{else}}
					{{company}}
				{{/if}}
			</span>

			{{#if positions}}
				{{#each positions}}
					{{> position}}
				{{/each}}
			{{else}}
				{{> position}}
			{{/if}}
		</div>
	{{/each}}
</section>
{{/if}}