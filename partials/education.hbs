{{#if resume.education.length}}
<section>
	<h2>Education</h2>
	{{#each resume.education}}
		<span class="headline">{{institution}}</span>
		<p class="sub-headline">
			{{#if studyType }}
				{{studyType}}
			{{/if}}

			{{#if area }}
				{{#if studyType }}
					-
				{{/if}}
				{{area}}
			{{/if}}
			
			{{> date-range}}
		</p>
	{{/each}}
</section>
{{/if}}