{{#if resume.education.length}}
	{{#each resume.education}}
		<section class="position">
			{{#if @first}}
				<h2>Education</h2>
			{{/if}}
			<div class="institution-header">
				<h3>{{institution}}</h3>
				<span>{{> date-range}}</span>
			</div>
			<h4>
				{{studyType}}{{#if area }}, {{area}}{{/if}}
			</h4>
		</section>
	{{/each}}
{{/if}}