{{#if resume.skills.length}}
<section class="skills-section">
    <h2>Skills</h2>
    {{#each resume.skills}}
    <div class="skill-category">
        <p class="skill-entry">
            <span class="skill-name">{{name}}</span>{{#if level}} <span class="skill-level">({{level}})</span>{{/if}}: <span class="skill-keywords">{{#each keywords}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}</span>
        </p>
    </div>
    {{/each}}
</section>
{{/if}} 