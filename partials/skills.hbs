{{#if resume.skills.length}}
<section class="skills-section">
    <h2>Skills</h2>
    {{#each resume.skills}}
    <div class="skill-category">
        <h3>{{name}}{{#if level}} <span class="skill-level">({{level}})</span>{{/if}}</h3>
        <ul class="keywords">
            {{#each keywords}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
    {{/each}}
</section>
{{/if}} 